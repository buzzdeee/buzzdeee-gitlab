#!/bin/sh
#
# This file is managed via Puppet

daemon="bundle<%= @ruby_suffix %> exec sidekiq"
daemon_flags="-C <%= @sidekiq_config %> -e production"
daemon_user="<%= @gitlab_user %>"

. /etc/rc.d/rc.subr

pexp="ruby<%= @ruby_suffix %>: sidekiq.*gitlab.*(ruby<%= @ruby_suffix %>)"
rc_reload=NO

rc_start() {
	install -d -o ${daemon_user} /var/run/gitlab
	${rcexec} "cd <%= @unicorn_root %> && \
		${daemon} ${daemon_flags} &"
}

rc_cmd $1
